<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/team_header_outer_layout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent">

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/fragment_team_header_descr" />

    <TextView
        android:id="@+id/fragment_team_header_related_project_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="12dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="STX Next developer teams:"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_team_header_team_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>