<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_extended_list_outer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@drawable/stx_ripple_color"
    android:orientation="vertical">

        <TextView
            android:id="@+id/item_extended_list_main_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item header - no content"
            android:textColor="@color/grey_super_dark"
            android:layout_marginTop="@dimen/activity_details_margin"
            android:layout_marginLeft="@dimen/activity_details_margin"
            android:layout_marginRight="@dimen/activity_details_margin"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_extended_list_main_bottom_extension_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item header - no content"
            android:textColor="@color/grey_dark"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_marginLeft="@dimen/activity_details_margin"
            android:layout_marginRight="@dimen/activity_details_margin"
            android:layout_marginBottom="@dimen/activity_details_margin"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/grey_light" />

</LinearLayout>

